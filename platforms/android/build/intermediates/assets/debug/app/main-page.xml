<Page loaded="pageLoaded">
  <GridLayout id="3blocks">
    <GridLayout  columns="*,*" rows="*,*,*" id="itemLR">
      <Label text="Label BEFORE" row="0" col="0" colSpan="2" backgroundColor="lightblue" />
        <GridLayout row="1" col="0" backgroundColor="green" id="Litems">
            <ListView items="{{ leftItems }}" pan="dragit" id="Litem" />
        </GridLayout>
        <GridLayout row="1" col="1" backgroundColor="yellow">
            <ListView items="{{ rightItems }}" />
        </GridLayout>
        <Label text="Label END" row="2" col="0" colSpan="2" backgroundColor="lightblue"/>
        </GridLayout>
        <AbsoluteLayout>
          <Label left="100" top="300"  text="drag me" id="dragLabel" backgroundColor="pink" visibility="collapsed"/>
        </AbsoluteLayout>
    </GridLayout>
</Page>
