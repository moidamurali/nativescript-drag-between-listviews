<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd" xmlns:lv="nativescript-telerik-ui/listview">
  <GridLayout id="3blocks">
    <GridLayout  columns="*,*" rows="*,*,*" id="itemLR">
      <Label text="DROP here to delete" row="0" col="0" colSpan="2" backgroundColor="lightblue" />
        <GridLayout row="1" col="0" backgroundColor="green" id="Litems">
          <lv:RadListView  itemReordered="onItemReordered" itemReorderStarted="onItemReorderStart"
            items="{{ leftItems }}" 
            id="Litem" 
            selectionBehavior="None"
            itemReorder="true"
            reorderMode="HoldAndDrag"
            >

              <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical" />
              </lv:RadListView.listViewLayout>

              <lv:RadListView.itemTemplate>
                <StackLayout orientation="horizontal" horizontalAlignment="center">
                  <Label text="{{ value }}"/>
                </StackLayout>
              </lv:RadListView.itemTemplate>

          </lv:RadListView>
        </GridLayout>
        <GridLayout row="1" col="1" backgroundColor="yellow">
          <lv:RadListView  
            items="{{ rightItems }}" 
            id="Ritem" 
            selectionBehavior="None"
            itemReorder="true"
            reorderMode="HoldAndDrag"
            >

              <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical" />
              </lv:RadListView.listViewLayout>

              <lv:RadListView.itemTemplate>
                <StackLayout orientation="horizontal" horizontalAlignment="center">
                  <Label text="{{ value }}"/>
                </StackLayout>
              </lv:RadListView.itemTemplate>

          </lv:RadListView>
        </GridLayout>
        <Label text="DROP here to modify" row="2" col="0" colSpan="2" backgroundColor="lightblue"/>
        </GridLayout>
    </GridLayout>
</Page>
